<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#64DD17</item>
    </style>

    <style name="outputStyle">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#64DD17</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#64DD17</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorHint">#00BFA5</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="displayCars">
        <item name="android:background">#00BFA5</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#070000</item>
    </style>

</resources>
