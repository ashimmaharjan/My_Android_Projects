<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number Dialer"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/showNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:maxLength="20"
        android:textSize="30dp"
        android:textColor="#64DD17"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@+id/showNumber"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_below="@+id/showNumber"
        android:layout_toRightOf="@+id/one"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"
        android:layout_marginLeft="70dp"/>

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_below="@+id/showNumber"
        android:layout_toRightOf="@+id/two"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"
        android:layout_marginLeft="70dp"/>

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/one"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/four"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"
        android:layout_marginLeft="70dp"/>

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_below="@+id/three"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@+id/four"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_below="@+id/five"
        android:layout_toRightOf="@+id/seven"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"
        android:layout_marginLeft="70dp"/>

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_below="@+id/six"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_below="@+id/seven"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/eight"
        android:layout_toRightOf="@+id/star"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:layout_below="@+id/nine"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dial"
        android:layout_below="@+id/zero"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Del"
        android:textSize="25dp"
        android:background="@drawable/rounded_buttons"
        android:layout_below="@+id/hash"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"/>

    <Button
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open maps"
        android:layout_below="@+id/dial"
        android:layout_marginTop="5dp"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_below="@+id/maps"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>