<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRATION FORM"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_below="@+id/top"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"/>

    <EditText
        android:id="@+id/iname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:inputType="text"
        android:layout_below="@+id/top"
        android:layout_toRightOf="@+id/tname"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/taddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="20dp"
        android:layout_below="@id/tname"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/iaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter address"
        android:layout_below="@+id/tname"
        android:layout_toRightOf="@+id/taddress"/>

    <TextView
        android:id="@+id/tgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/taddress"/>

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taddress"
        android:layout_toRightOf="@+id/tgender">

        <RadioButton
            android:id="@+id/rg_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="18dp"
            android:layout_marginTop="8dp"/>
        <RadioButton
            android:id="@+id/rg_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="18dp" />
        <RadioButton
            android:id="@+id/rg_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textSize="18dp"/>

    </RadioGroup>

    <CheckBox
        android:id="@+id/check_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_gender"
        android:layout_marginLeft="80dp"
        android:text="Accept"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/check_accept"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tdisinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your information"
        android:layout_below="@+id/register"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tdn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_below="@+id/tdisinput"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tdisinput"
        android:layout_toRightOf="@+id/tdn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Address:"
        android:layout_below="@+id/tdn"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/display_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tdn"
        android:layout_toRightOf="@+id/tda"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:textSize="20dp"
        android:layout_below="@+id/tda"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/display_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tda"
        android:layout_toRightOf="@+id/tdg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"/>

</RelativeLayout>